<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.martasd.hungermeter"
    android:versionCode="1"
    android:versionName="0.1.0" >
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayStatsActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_display_stats"
            android:launchMode="singleTask"
            android:taskAffinity="" >
            <intent-filter>
            </intent-filter>
        </activity>
        <activity
            android:name=".PrefsActivity"
            android:label="@string/title_activity_prefs" >
        </activity>
        <activity
            android:name=".HowItWorksActivity"
            android:label="@string/title_activity_how_it_works" >
            <intent-filter>
            </intent-filter>
        </activity>
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credits" >
            <intent-filter>
            </intent-filter>
        </activity>
    </application>

</manifest>